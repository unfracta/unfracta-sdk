{
  "name": "unfracta-sdk",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Policy-driven signing SDK for continuity of trust across pre- and post-quantum environments.",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "demo": "npm run build && node dist/demo/runDemo.js",
    "hello": "npm run build && node scripts/hello.mjs",
    "bench": "npm run build && node dist/bench/runBench.js",
    "audit:prepare": "node scripts/audit-prepare.mjs",
    "audit:record": "node scripts/audit-record.mjs",
    "env:check": "node scripts/verify-env.mjs",
    "diligence:bundle": "npm run audit:prepare && node scripts/diligence-bundle.mjs",
    "test": "vitest run",
    "sbom": "npx --yes @cyclonedx/cyclonedx-npm --output-file sbom.cdx.json --output-format json"
  },
  "devDependencies": {
    "@cyclonedx/cyclonedx-npm": "^4.1.2",
    "@types/node": "^22.0.0",
    "node-addon-api": "^8.5.0",
    "node-gyp": "^12.1.0",
    "typescript": "^5.6.3",
    "vitest": "latest"
  }
}
